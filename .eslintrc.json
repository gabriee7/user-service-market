{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"],
    "no-console": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@controllers", "./src/controllers"],
          ["@services", "./src/services"],
          ["@repositories", "./src/repositories"],
          ["@routes", "./src/routes"]
        ],
        "extensions": [".js", ".json"]
      }
    }
  }
}
